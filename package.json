{
  "name": "intent-copilot-mvp",
  "version": "0.3.0",
  "description": "Turn natural‑language trading commands into fully‑formed 1inch Intents or Limit‑Order predicates",
  "main": "dist/index.js",
  "bin": {
    "copilot": "./copilot"
  },
  "scripts": {
    "build": "tsc",
    "build:frontend": "cd frontend && pnpm install && pnpm build",
    "build:all": "pnpm build && pnpm build:frontend",
    "dev": "ts-node src/index.ts",
    "dev:frontend": "cd frontend && pnpm dev",
    "start": "node dist/index.js",
    "start:frontend": "cd frontend && pnpm start",
    "test": "jest",
    "test:frontend": "cd frontend && pnpm type-check && pnpm lint",
    "test:all": "pnpm test && pnpm test:frontend",
    "lint": "eslint src/**/*.ts",
    "clean": "rm -rf dist && cd frontend && rm -rf .next",
    "deploy:frontend": "cd frontend && ./deploy.sh"
  },
  "keywords": [
    "defi",
    "1inch",
    "trading",
    "ai",
    "blockchain",
    "intents",
    "limit-orders",
    "frontend",
    "web3",
    "privy"
  ],
  "author": "Intent Copilot Team",
  "license": "MIT",
  "dependencies": {
    "@1inch/limit-order-protocol-utils": "^4.0.1",
    "@ai-sdk/anthropic": "^1.2.12",
    "ai": "^4.3.19",
    "axios": "^1.6.2",
    "chalk": "4",
    "commander": "^11.1.0",
    "dotenv": "^16.3.1",
    "ethers": "^6.8.1",
    "inquirer": "^9.2.12",
    "ora": "5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.9.0",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "workspaces": [
    "frontend"
  ]
}